    "def reverse(s):\n",
    "    \n",
    "    # base case\n",
    "    \n",
    "    if len(s) <= 1 :\n",
    "        \n",
    "        return s\n",
    "    \n",
    "    # recursion case\n",
    "    \n",
    "    return  reverse(s[1:])  + s[0]\n",
    "    "
